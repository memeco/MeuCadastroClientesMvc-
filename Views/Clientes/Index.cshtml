@model IEnumerable<MeuCadastroClientesMvc.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true">

<h1>Clientes</h1>

<p>
    <a asp-action="Create">Adicionar Cadastro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Endere√ßo</th>
            <th>Telefone</th>
            <th>RG</th>
            <th>CPF</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.ID_Cliente</td>
            <td>@item.Nome</td>
            <td>@item.Endereco</td>
            <td>@item.Telefone</td>
            <td>@item.RG</td>
            <td>@item.CPF</td>
            <td>@item.Email</td>
            <td><a asp-action="Edit" id="edit" asp-route-id="@item.ID_Cliente">Editar</a> </td>
            <td><a asp-action="Details" id="details" asp-route-id="@item.ID_Cliente">Detalhes</a></td>
            <td><a asp-action="Delete" id="delete" asp-route-id="@item.ID_Cliente">Deletar</a></td>
        </tr>
}
    </tbody>
</table>
